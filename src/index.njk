    <section>

        <ul class="list">
            {% for polaroid in polaroidsList %}
                <li>
                    <figure>
                        {% if polaroid.onmouseover_src %}
                        <img alt="" width="300" height="365" loading="lazy"
                            src="{{ polaroid.img_src }}"
                            onmouseover="this.src='{{ polaroid.onmouseover_src }}'"
                            onmouseout="this.src='{{ polaroid.img_src }}'"
                        />
                        {% else %}
                        <img alt=""  width="300" height="365"  loading="lazy" src="{{ polaroid.img_src }}" />
                        {% endif %}
                        <figcaption>
                            <h2>
                                {{ polaroid.musician_name }}
                                <span>{{ polaroid.band_name }}</span>
                            </h2>
                        </figcaption>
                    </figure>
                </li>
            {% endfor %}
        </ul>

    </section>
</main>

